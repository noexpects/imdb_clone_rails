%h2 #{I18n.t(:'login_page.log_in_label')}
= link_to "", user_google_oauth2_omniauth_authorize_path, data: { turbolinks: false }, class: 'fa-brands fa-google fa-2x'
%p.general-login-text or
= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f|
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete:  I18n.t(:email_autocomplete)
  .field
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: I18n.t(:current_password_autocomplete)
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit I18n.t(:'login_page.log_in_label')
= render "devise/shared/links"
