.mx-auto.my-auto
  .text-center
    %h2 #{I18n.t(:'change_password_page.change_password_label')}
  .general-form
    = form_for(resource, as: resource_name, url: password_path(resource_name), data:{turbo: false}, html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      .form-outline.mb-4
      .field
        = f.label :password, I18n.t(:'change_password_page.password_label'), class: 'form-label'
        %br/
        - if @minimum_password_length
          %em
            =I18n.t(:'user_profile_edit_page.characters_minimum_message', amount: @minimum_password_length)
          %br/
        = f.password_field :password, autofocus: true, autocomplete: I18n.t(:password_autocomplete), class: 'form-control'
      .form-outline.mb-4
      .field
        = f.label :password_confirmation, I18n.t(:'change_password_page.confirm_password_label'), class: 'form-label'
        %br/
        = f.password_field :password_confirmation, autocomplete: I18n.t(:password_autocomplete), class: 'form-control'
      .form-outline.mb-4
      .actions
        .text-center
          = f.submit I18n.t(:'change_password_page.submit_btn_text'), class: 'btn btn-primary btn-block mb-4', id: 'submit_btn'
