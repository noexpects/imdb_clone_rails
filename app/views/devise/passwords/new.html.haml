%h2 #{I18n.t(:'forgot_password_page.forgot_pass_label')}
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: I18n.t(:email_autocomplete)
  .actions
    = f.submit I18n.t(:'forgot_password_page.submit_btn_text')
= render "devise/shared/links"
