%h2 #{I18n.t(:'sign_up_page.sign_up_label')}
= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: I18n.t(:email_autocomplete)
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        #{I18n.t(:'user_profile_edit_page.characters_minimum_message', amount: @minimum_password_length.to_s)}
    %br/
    = f.password_field :password, autocomplete: I18n.t(:password_autocomplete)
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: I18n.t(:password_autocomplete)
  .actions
    = f.submit I18n.t(:'sign_up_page.sign_up_label')
= render "devise/shared/links"
